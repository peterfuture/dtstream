SET(ANDROID TRUE)
SET(ANDROID_NDK_PATH $ENV{ANDROID_NDK})
SET(ANDROID_TOOLCHAIN_PATH $ENV{ANDROID_TOOL_CHAIN})

#MESSAGE("Target:Android")
